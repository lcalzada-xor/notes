[
  {
    "description": "GitHub personal access token (ghp_)",
    "regex": "\\bghp_[A-Za-z0-9]{36}\\b",
    "sections": ["res"]
  },
  {
    "description": "GitHub fine-grained personal access token (github_pat_)",
    "regex": "\\bgithub_pat_[A-Za-z0-9_]{80,90}\\b",
    "sections": ["res"]
  },
  {
    "description": "GitLab personal access token (glpat-)",
    "regex": "\\bglpat-[A-Za-z0-9_-]{20,28}\\b",
    "sections": ["res"]
  },
  {
    "description": "Bitbucket OAuth token (x-token-auth:...)",
    "regex": "\\bx-token-auth:[A-Za-z0-9_\\-]{32,64}\\b",
    "sections": ["res"]
  },
  {
    "description": "Atlassian API token (user:token style)",
    "regex": "\\b[A-Za-z0-9]{24}\\:[A-Za-z0-9]{32}\\b",
    "sections": ["res"]
  },
  {
    "description": "JWT (three base64url parts — avoids short false positives)",
    "regex": "\\beyJ[A-Za-z0-9_\\-]{10,}\\.[A-Za-z0-9_\\-]{10,}\\.[A-Za-z0-9_\\-]{10,}\\b",
    "sections": ["res"]
  },
  {
    "description": "Firebase ID token (long JWT-like, more specific)",
    "regex": "\\beyJ[A-Za-z0-9_\\-]{20,}\\.[A-Za-z0-9_\\-]{80,}\\.[A-Za-z0-9_\\-]{30,}\\b",
    "sections": ["res"]
  },
  {
    "description": "RSA private key block (PEM)",
    "regex": "-----BEGIN RSA PRIVATE KEY-----[\\s\\S]+?-----END RSA PRIVATE KEY-----",
    "sections": ["res"]
  },
  {
    "description": "OpenSSH private key block (new format)",
    "regex": "-----BEGIN OPENSSH PRIVATE KEY-----[\\s\\S]+?-----END OPENSSH PRIVATE KEY-----",
    "sections": ["res"]
  },
  {
    "description": "PGP private key block",
    "regex": "-----BEGIN PGP PRIVATE KEY BLOCK-----[\\s\\S]+?-----END PGP PRIVATE KEY BLOCK-----",
    "sections": ["res"]
  },
  {
    "description": "Google Maps API key (AIza... — common and specific)",
    "regex": "\\bAIza[0-9A-Za-z_\\-]{35}\\b",
    "sections": ["res"]
  },
  {
    "description": "Stripe live secret key (sk_live_... — stricter)",
    "regex": "\\bsk_live_[0-9a-zA-Z]{24}\\b",
    "sections": ["res"]
  },
  {
    "description": "Twilio Account SID (AC...)",
    "regex": "\\bAC[0-9a-f]{32}\\b",
    "sections": ["res"]
  },
  {
    "description": "Twilio Auth Token (hex 32)",
    "regex": "\\b[0-9a-f]{32}\\b",
    "sections": ["res"]
  },
  {
    "description": "Sendinblue API key (xkeysib-...-...)",
    "regex": "\\bxkeysib-[A-Za-z0-9]{64}-[A-Za-z0-9]{8,16}\\b",
    "sections": ["res"]
  },
  {
    "description": "Mailchimp API Key (key-usX)",
    "regex": "\\b[A-Za-z0-9]{32}-us[0-9]{1,2}\\b",
    "sections": ["res"]
  },
  {
    "description": "GitHub Actions/GHCR token-like hex (less specific — use carefully)",
    "regex": "\\b[A-Fa-f0-9]{40}\\b",
    "sections": ["res"]
  },
  {
    "description": "Linode API token (linode_...)",
    "regex": "\\blinode_[A-Za-z0-9]{32,64}\\b",
    "sections": ["res"]
  },
  {
    "description": "Cloudflare API Token (40+ chars, base64url-ish)",
    "regex": "\\b[A-Za-z0-9_\\-]{40,60}\\b",
    "sections": ["res"]
  },
  {
    "description": "Heroku API key (32 hex chars)",
    "regex": "\\b[0-9a-f]{32}\\b",
    "sections": ["res"]
  },
  {
    "description": "MongoDB connection string with credentials",
    "regex": "\\bmongodb(\\+srv)?:\\/\\/[^:\\/\\s]+:[^@\\s]+@[^\\s\\/]+\\b",
    "sections": ["req_body","res_body"]
  },
  {
    "description": "PostgreSQL connection string with credentials",
    "regex": "\\bpostgres(?:ql)?:\\/\\/[^:\\/\\s]+:[^@\\s]+@[^\\s\\/]+\\/[A-Za-z0-9_\\-]+\\b",
    "sections": ["req_body","res_body"]
  },
  {
    "description": "MySQL connection string with credentials",
    "regex": "\\bmysql:\\/\\/[^:\\/\\s]+:[^@\\s]+@[^\\s\\/]+\\/[A-Za-z0-9_\\-]+\\b",
    "sections": ["req_body","res_body"]
  }
]
